{
  "name": "bitcoinjs-mcp-server",
  "version": "1.0.6",
  "description": "MCP (Model Context Protocol) server for Bitcoin development using bitcoinjs-lib",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "bitcoinjs-mcp-server": "bin/bitcoinjs-mcp-server.js"
  },
  "files": [
    "dist/**/*",
    "bin/**/*",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "bitcoin",
    "mcp",
    "model-context-protocol",
    "bitcoinjs",
    "cryptocurrency",
    "blockchain"
  ],
  "author": "Odyssey98",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Odyssey98/bitcoinjs-mcp-server"
  },
  "homepage": "https://chatgptnb.com/bitcoinjs-mcp-server",
  "bugs": {
    "url": "https://github.com/Odyssey98/bitcoinjs-mcp-server/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "bip32": "^5.0.0-rc.0",
    "bitcoinjs-lib": "^6.1.6",
    "ecpair": "^3.0.0",
    "tiny-secp256k1": "^2.2.3"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.4.1",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
